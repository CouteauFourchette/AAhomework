<% @albums.each do |album|  %>
<% if album.tracks.length > 0 %>
<h2><%= album.title %> by <%= album.band.name %></h2>
<table class='table'>
  <% album.tracks.each do |track| %>
    <tr>
     <td><%= track.title %></td>
     <td><%= track.ord %></td>
     <td><%= track.regular %></td>
     <td class="table-buttons"><a href="<%= edit_track_url(track) %>" class='button-outline'> edit </a>
       <form action="<%= track_url(track) %>" method="post">
       <%= auth_token %>
       <input type="hidden" name='_method' value='DELETE'>
       <input type="submit" value="Delete" class='button-outline'>
     </form></td>
   </tr>
  <% end %>

</table>

<% end %>

<% end  %>
